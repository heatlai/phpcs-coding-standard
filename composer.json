{
    "name": "heatlai/phpcs-coding-standard",
    "description": "Heatlai Coding Standard for PHP_CodeSniffer.",
    "type": "phpcodesniffer-standard",
    "license": "MIT",
    "keywords": ["phpcs", "dev"],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.0 || ^8.0",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-ctype": "*",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.6.2 || ^0.7 || ^1.0",
        "squizlabs/php_codesniffer": "^3.7.1"
    },
    "autoload": {
        "psr-4": {
            "HeatlaiCodingStandard\\": "HeatlaiCodingStandard"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "require-dev": {
        "phpcompatibility/php-compatibility": "^9.3"
    }
}
